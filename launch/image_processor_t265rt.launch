<launch>

  <arg name="robot" default="t265"/>
  <arg name="calibration_file"
    default="$(find msckf_vio)/config/camchain-imucam-t265.yaml"/>

  <!-- Image Processor Nodelet  -->
  <group ns="$(arg robot)">
    <node pkg="nodelet" type="nodelet" name="image_processor"
      args="standalone msckf_vio/ImageProcessorNodelet"
      output="screen">

      <rosparam command="load" file="$(arg calibration_file)"/>
      <param name="grid_row" value="8"/>
      <param name="grid_col" value="8"/>
      <param name="grid_min_feature_num" value="1"/>
      <param name="grid_max_feature_num" value="4"/>
      <param name="pyramid_levels" value="3"/>
      <param name="patch_size" value="30"/>
      <param name="fast_threshold" value="10"/>
      <param name="max_iteration" value="30"/>
      <param name="track_precision" value="0.006"/>
      <param name="ransac_threshold" value="3"/>
      <param name="stereo_threshold" value="5"/>

      <remap from="~imu" to="/imu/data_raw"/>
      <remap from="~cam0_image" to="/camera/fisheye1/image_raw"/>
      <remap from="~cam1_image" to="/camera/fisheye2/image_raw"/>
      <remap from="~acc" to="/camera/accel/sample"/>
      <remap from="~gyr" to="/camera/gyro/sample"/>

    </node>
  </group>

</launch>
